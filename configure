#!/bin/bash
NORE_PREFIX=/opt/apps/c/.nore
NORE_GITHUB=https://github.com/junjiemars/nore.git
NORE_L_BOOT=$NORE_PREFIX/bootstrap.sh
NORE_R_BOOT=https://raw.githubusercontent.com/junjiemars/nore/master/bootstrap.sh
NORE_L_CONF=${NORE_PREFIX}/auto/configure


cd "`dirname ${BASH_SOURCE}`" && \
if [ 1 -le $# ]; then
	case ".$1" in
	  .-u*|.--update*)
			if [ -f $NORE_L_BOOT ]; then
				$NORE_L_BOOT -u
			else
				curl -sqL ${NORE_R_BOOT} | PREFIX=$NORE_PREFIX bash -s -- -u
			fi
	  	;;
		.*)
			if [ -f $NORE_L_CONF ]; then
				$NORE_L_CONF "$@"
			else
				echo
				echo "!nore << no found, to fix >: configure --update"
				echo 
			fi
			;;
	esac
fi

